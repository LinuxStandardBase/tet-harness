diff -uNr tet3-lite-3.6b~/profile.skeleton tet3-lite-3.6b/profile.skeleton
--- tet3-lite-3.6b~/profile.skeleton	1970-01-01 08:00:00.000000000 +0800
+++ tet3-lite-3.6b/profile.skeleton	2005-04-29 16:28:01.259161080 +0800
@@ -0,0 +1,32 @@
+# sample profile for tet3
+HOME=`pwd`
+echo Unconfigured
+PATH=$TET_ROOT/bin:$PATH
+MANPATH=$MANPATH:$TET_ROOT/man
+export TET_ROOT PATH MANPATH
+
+# useful shell functions for TET
+tccb()
+{
+tcc -b -s $HOME/scen.bld $*
+}
+
+tcce()
+{
+tcc -e -s $HOME/scen.exec $*
+}
+
+tccc()
+{
+tcc -c -s $HOME/scen.bld $*
+}
+
+jrpt()
+{
+(cd $HOME/results; vrpt -l ${1-area} -HP `ls -d 0* | tail -1`/journal | less)
+}
+
+jx()
+{
+(cd $HOME/results; vres `ls -d 0* | tail -1`/journal | less)
+}
